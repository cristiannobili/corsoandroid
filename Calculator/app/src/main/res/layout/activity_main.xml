<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="360dp"
        android:layout_height="70dp"
        android:layout_gravity="start"
        android:layout_margin="20dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/back"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif"
        android:gravity="right"
        android:padding="10dp"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/plusMinusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/acButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="AC"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/plusButton2"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="clickListener"
         />

    <Button
        android:id="@+id/plusMinusButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="17dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="+/-"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton3"
        app:layout_constraintStart_toEndOf="@+id/acButton" />

    <Button
        android:id="@+id/percentButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="43dp"
        android:layout_marginBottom="17dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="%"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/_9Button"
        app:layout_constraintStart_toEndOf="@+id/plusMinusButton"
         />

    <Button
        android:id="@+id/_9Button"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="17dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="9"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton7"
        app:layout_constraintStart_toEndOf="@+id/plusButton3" />

    <Button
        android:id="@+id/calcButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="18dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:text="="
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.001"
        app:layout_constraintStart_toEndOf="@+id/percentButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/plusButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="17dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="+"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/minusButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/_9Button" />

    <Button
        android:id="@+id/plusButton3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="17dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="8"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton6"
        app:layout_constraintStart_toEndOf="@+id/plusButton2" />


    <Button
        android:id="@+id/plusButton5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="4"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plusButton6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="17dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="5"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton9"
        app:layout_constraintStart_toEndOf="@+id/plusButton5" />

    <Button
        android:id="@+id/plusButton7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="17dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="6"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton10"
        app:layout_constraintStart_toEndOf="@+id/plusButton6" />

    <Button
        android:id="@+id/plusButton8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="15dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="1"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plusButton9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="29dp"
        android:layout_marginBottom="18dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="2"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton4"
        app:layout_constraintStart_toEndOf="@+id/plusButton8" />

    <Button
        android:id="@+id/plusButton10"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="18dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="3"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton12"
        app:layout_constraintStart_toEndOf="@+id/plusButton9" />

    <Button
        android:id="@+id/plusButton12"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:text="."
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plusButton4" />

    <Button
        android:id="@+id/plusButton4"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="0"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/plusButton2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="15dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="7"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/plusButton5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/minusButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="-"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/multButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/plusButton7" />

    <Button
        android:id="@+id/multButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="X"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toTopOf="@+id/divButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/plusButton10" />

    <Button
        android:id="@+id/divButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="16dp"
        android:background="@color/purple_700"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="/"
        android:textSize="25dp"
        android:onClick="clickListener"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/plusButton12" />

</androidx.constraintlayout.widget.ConstraintLayout>